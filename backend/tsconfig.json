{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/index.ts", "scripts"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "build",
    "esModuleInterop": true
  }
}
